generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id_user       Int      @id @default(autoincrement())
  nama          String
  email         String   @unique
  no_telepon    String   @unique
  password      String
  foto_profile  String?
  fcm_token     String? 
  tanggal_dibuat DateTime @default(now())

  umkm   UMKM[]
  ulasan Ulasan[]
  follow  Follow[]
  notifikasi   NotificationSendTo[]
}

model KategoriUMKM {
  id_kategori_umkm Int     @id @default(autoincrement())
  nama_kategori    String
  deskripsi        String?
  umkm             UMKM[]
}

model UMKM {
  id_umkm          Int      @id @default(autoincrement())
  id_user          Int
  id_kategori_umkm Int?
  nama_umkm        String
  alamat           String?
  no_telepon       String?
  deskripsi        String?
  link_lokasi      String?
  
  // Field baru untuk gambar UMKM
  gambar           String?
  
  tanggal_terdaftar DateTime @default(now())

  user          User          @relation(fields: [id_user], references: [id_user])
  kategori_umkm KategoriUMKM? @relation(fields: [id_kategori_umkm], references: [id_kategori_umkm])
  
  produk        Produk[]
  promo         Promo[]
  
  // PERBAIKAN: Field lawan untuk relasi ke KategoriProduk
  kategori_produk KategoriProduk[] 
  follow          Follow[]
}

model KategoriProduk {
  id_kategori_produk Int     @id @default(autoincrement())
  id_umkm            Int
  nama_kategori      String
  deskripsi          String?
  urutan             Int     @default(0)

  umkm               UMKM    @relation(fields: [id_umkm], references: [id_umkm]) 
  produk             Produk[]

  @@index([id_umkm, urutan])
}

model Produk {
  id_produk          Int      @id @default(autoincrement())
  id_umkm            Int
  id_kategori_produk Int?
  nama_produk        String
  deskripsi          String?
  harga              Float
  gambar             String?
  tanggal_ditambahkan DateTime @default(now())

  umkm            UMKM            @relation(fields: [id_umkm], references: [id_umkm])
  kategori_produk KategoriProduk? @relation(fields: [id_kategori_produk], references: [id_kategori_produk])
  ulasan          Ulasan[]
}

model Ulasan {
  id_ulasan      Int      @id @default(autoincrement())
  id_user        Int
  id_produk      Int
  rating         Int
  komentar       String?
  foto           String?
  tanggal_ulasan DateTime @default(now())

  user   User   @relation(fields: [id_user], references: [id_user])
  produk Produk @relation(fields: [id_produk], references: [id_produk])
}

model Promo {
  id_promo          Int       @id @default(autoincrement())
  id_umkm           Int
  nama_promo        String
  deskripsi         String?
  syarat_penggunaan String?
  
  // Field baru untuk cara penggunaan promo
  cara_penggunaan   String?
  
  tanggal_mulai     DateTime?
  tanggal_berakhir  DateTime?

  umkm UMKM @relation(fields: [id_umkm], references: [id_umkm])
}

model Follow {
  id_follow Int @id @default(autoincrement())
  id_user   Int
  id_umkm   Int

  user User @relation(fields: [id_user], references: [id_user])
  umkm UMKM @relation(fields: [id_umkm], references: [id_umkm])

  @@unique([id_user, id_umkm]) // mencegah follow ganda
}

model Notifikasi {
  id_notifikasi Int @id @default(autoincrement())
  judul         String
  isi           String
  tanggal_kirim DateTime @default(now())

  penerima NotificationSendTo[]
}

model NotificationSendTo {
  id_notifikasi Int
  id_user       Int
  dikirim_pada  DateTime @default(now())

  notifikasi Notifikasi @relation(fields: [id_notifikasi], references: [id_notifikasi])
  user       User       @relation(fields: [id_user], references: [id_user])

  @@id([id_notifikasi, id_user]) // composite primary key
}

